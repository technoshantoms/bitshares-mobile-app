<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.btsplusplus.fowallet.ActivityAddNewApiNode"
    android:background="@color/theme01.appBackColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_back_from_new_api_node"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/theme01.textColorMain"
                    android:src="@drawable/ic_btn_back"/>
                <TextView
                    style="@style/kNavigationBarTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kBtnBack"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="添加节点"
                style="@style/kNavigationBarTextStyle" />

        </FrameLayout>

        <!-- 节点名称 -->
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/theme01.textColorMain"
                android:textSize="14dp"
                android:text="@string/kSettingNewApiCellLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/tf_node_name"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/kTextFieldNormal"
                android:hint="@string/kSettingNewApiCellPlaceholderName"/>

            <View android:layout_height="1dp" android:background="@color/theme01.bottomLineColor" android:layout_marginTop="10dp" android:layout_width="fill_parent"></View>

        </LinearLayout>

        <!-- 节点地址 -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/theme01.textColorMain"
                android:textSize="15dp"
                android:text="@string/kSettingNewApiCellLabelURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/tf_node_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/kTextFieldNormal"
                android:hint="@string/kSettingNewApiCellPlaceholderURL"/>

            <View android:layout_height="1dp" android:background="@color/theme01.bottomLineColor" android:layout_marginTop="10dp" android:layout_width="fill_parent"></View>

        </LinearLayout>

        <!-- 确定按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                style="@style/kMainButtonStyle"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/kSettingNewApiSubmitBtn" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
