            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_weight="9"
                android:textColor="@color/theme01.textColorMain"
                android:text="@string/kAccountMembershipShareLink"/>

            <TextView
                android:id="@+id/tv_my_share_link"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:textSize="16dp"
                android:layout_weight="9"
                android:textColor="@color/theme01.textColorNormal"
                android:text="@string/kAccountMembershipClickCopyTips"/>


        </LinearLayout>
