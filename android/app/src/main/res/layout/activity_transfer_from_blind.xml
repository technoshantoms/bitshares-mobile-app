<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme01.appBackColor"
    tools:context="com.btsplusplus.fowallet.ActivityTransferFromBlind">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- 导航栏 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_back_from_transfer_from_blind"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/theme01.textColorMain"
                    android:src="@drawable/ic_btn_back"/>
                <TextView
                    style="@style/kNavigationBarTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kBtnBack"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="@string/kVcTitleTransferFromBlind"
                style="@style/kNavigationBarTextStyle" />

        </FrameLayout>

        <ScrollView
            android:fillViewport="true"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 隐私收据列表 -->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:id="@+id/layout_blind_receipt_list_from_transfer_from_blind"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <View android:layout_height="1dp" android:layout_marginTop="10dp" android:background="@color/theme01.bottomLineColor" android:layout_width="fill_parent"></View>

                <!-- 目标账户 -->
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/theme01.textColorMain"
                    android:textSize="14dp"
                    android:text="@string/kVcAssetOpCellTitleIssueTargetAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- 选择目标账户 -->
                <LinearLayout
                    android:id="@+id/layout_to_account"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_to_account_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/theme01.textColorGray"
                        android:textSize="14dp"
                        android:text="@string/kVcAssetOpCellValueIssueTargetAccountDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_to_account_id"
                            android:textColor="@color/theme01.textColorMain"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/img_arrow_to_account"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:foregroundGravity="right"
                            android:tint="@color/theme01.textColorMain"
                            android:src="@drawable/ic_btn_right_arrow" />
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_height="1dp" android:layout_marginTop="10dp" android:background="@color/theme01.bottomLineColor" android:layout_width="fill_parent"></View>

                <!-- 收据总金额 -->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorGray"
                        android:text="@string/kVcStCellTitleTotalInputReceiptAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_total_input_value"
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorNormal"
                        android:text="-- TEST"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 广播手续费 -->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorGray"
                        android:text="@string/kVcStCellTitleNetworkFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_network_fee_value"
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorNormal"
                        android:text="-- TEST"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 实际到账 -->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorGray"
                        android:text="@string/kVcStCellTitleActualAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_actual_amount"
                        android:textSize="12dp"
                        android:textColor="@color/theme01.buyColor"
                        android:text="-- TEST"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 隐私转入按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_commit"
                        android:layout_width="wrap_content"
                        style="@style/kMainButtonStyle"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/kVcStBtnTransferFromBlind" />
                </LinearLayout>

                <!-- 提示 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kVcStTipUiTransferFromBlind" 
                    style="@style/kUiTipsStyle"
                    />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
