<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.btsplusplus.fowallet.ActivityGatewayDeposit"
    android:background="@color/theme01.appBackColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layout_back_from_gateway_recharge"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/theme01.textColorMain"
                    android:src="@drawable/ic_btn_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kBtnBack"
                    style="@style/kNavigationBarTextStyle"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/title_of_gateway_recharge"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""
                style="@style/kNavigationBarTextStyle" />


        </FrameLayout>

        
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layout_qrcode_of_recharge_page"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_qrcode_of_recharge_page"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

            </LinearLayout>

            <!-- address & copy -->
            <TextView
                android:id="@+id/id_label_address"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme01.textColorMain"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_copy_address"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kVcDWCellBtnCopyAddr"
                android:textColor="@color/theme01.textColorHighlight"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <!-- memo & copy -->
            <TextView
                android:id="@+id/id_label_memo"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme01.textColorMain"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_copy_memo"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kVcDWCellBtnCopyMemo"
                android:textColor="@color/theme01.textColorHighlight"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tip_of_recharge_page"
                android:layout_marginTop="40dp"
                android:lineHeight="10dp"
                android:maxLines="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/kUiTipsStyle"
                android:textSize="13dp"
                android:gravity="left"/>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
