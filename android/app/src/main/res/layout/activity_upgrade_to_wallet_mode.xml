<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.btsplusplus.fowallet.ActivityUpgradeToWalletMode"
    android:background="@color/theme01.appBackColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <!-- title -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layout_back_from_page_of_upgrade_to_wallet_model"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/theme01.textColorMain"
                    android:src="@drawable/ic_btn_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kBtnBack"
                    style="@style/kNavigationBarTextStyle"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="@string/kVcTitleConvertToWalletMode"
                style="@style/kNavigationBarTextStyle" />


        </FrameLayout>

        <!-- account name & account id -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_name_of_upgrade_to_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme01.textColorMain"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/account_id_of_upgrade_to_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme01.textColorMain"
                android:gravity="center"
                android:text=""
                android:textSize="13dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/kLoginPassword"
                android:textSize="16dp"
                android:textColor="@color/theme01.textColorMain"/>

            <EditText
                android:id="@+id/tf_password_of_upgrade_to_wallet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/kTextFieldPassword"
                android:hint="@string/tip_placeholder_password"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/kLoginCellWalletPassword"
                android:textSize="16dp"
                android:textColor="@color/theme01.textColorMain"/>

            <EditText
                android:id="@+id/tf_wallet_password_of_upgrade_to_wallet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/kTextFieldPassword"
                android:hint="@string/kLoginTipsPlaceholderWalletPassword"/>

            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/tip_link_wallet_password_of_upgrade_to_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/theme01.textColorHighlight"
                    android:src="@drawable/icon_tip" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_create_wallet_of_upgrade_to_wallet"
                android:layout_width="wrap_content"
                style="@style/kMainButtonStyle"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:textAllCaps="false"
                android:text="@string/kNormalCellBtnCreateWallet" />
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
