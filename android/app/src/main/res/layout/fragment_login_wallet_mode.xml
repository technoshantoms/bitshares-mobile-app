<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentLoginWalletMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!-- initialize -->
            <TextView
                android:id="@+id/text_ip_of_back_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/kTipsInitialize"
                android:textColor="@color/theme01.textColorMain"
                android:textSize="24dp" />

            <!-- tip message -->
            <TextView
                android:id="@+id/init_desc_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/kLoginTipsPleaseInputURL"
                android:textColor="@color/theme01.textColorMain"
                android:textSize="12dp" />

            <!-- list: title -->
            <TextView
                android:id="@+id/label_txt_recv_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/theme01.textColorHighlight"
                android:textSize="13dp"
                android:text="@string/registerLoginPageReceiveFiles0" />
                
            <!-- list: container -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_select_file_of_fragment_login_wallet_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>